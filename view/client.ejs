<html>

<head>
    <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=0.6, shrink-to-fit=no">
    <meta name="color-scheme" content="light only">
    <title>2004Scape Game</title>

    <style>
        body {
            width: 100%;
            height: 100%;
            margin: 0;
            padding: 0;

            background-color: black;
            color: white;
            font-family: Arial, Helvetica, sans-serif;
            font-size: 12px;
        }

        a {
            color: white;
            text-decoration: underline;
            cursor: pointer;
        }

        .container {
            display: flex;
            width: 100%;
            height: 100%;
            flex-direction: column;
            overflow: hidden;
        }

        .gameframe-top {
            padding-top: 2px;
            padding-bottom: 5px;

            vertical-align: top;
            display: inline-block;
            text-align: center;
        }

        .caption {
            display: block;
        }

        #gameframe {
            display: flex;
            flex-grow: 1;
            width: 100%;
            border: none;
            margin: 0;
            padding: 0;
        }

        .acknowledge {
            cursor: pointer;
            color: #ff0000;
            font-weight: bold;
        }

        .capture-interest {
            animation: capture-interest 2s linear 0.5s infinite normal forwards;
            color: #ff0000;
            font-weight: bold;
        }

        @keyframes capture-interest {
            0% {
                opacity: 0.3;
            }

            100% {
                opacity: 1.0;
            }
        }
    </style>

    <script>
        function hideTop() {
            document.getElementById('gameframe-top').style.display = 'none';
        }
 
        function hideNotification() {
            document.getElementById('notification').style.display = 'none';

            localStorage.setItem('hideNotification', true);
        }

        function loadSettings() {
            let notify = localStorage.getItem('hideNotification');
            if (notify === 'true') {
                hideNotification();
            }
        }

        function sendSettings() {
            let clientSettings = localStorage.getItem('clientSettings');
            if (clientSettings) {
                let iframe = document.getElementById('gameframe');
                iframe.contentWindow.postMessage(clientSettings, '*');
            }
        }

        window.onmessage = function(e) {
            if (e.origin !== '<%= world.address %>') {
                return;
            }

            localStorage.setItem('clientSettings', e.data);
        }
    </script>
</head>

<body>
    <center>
        <div class="container">
            <div class="gameframe-top align-image-text" id="gameframe-top">
                <img width="130px" src="/img/title/rslogo.gif" onclick="hideTop();">

                <div class="caption">
                    <a href="/title">Main Menu</a> -
                    <a onclick="window.open('/guide', 'Rules', 'width=800,height=600');">Rules</a> -
                    <a onclick="window.open('/worldmap', 'WorldMap', 'width=800,height=600');">World Map</a> -
                    <a onclick="window.open('/hiscores', 'Hiscores', 'width=800,height=600');">Hiscores</a> -
                    <a onclick="window.open('https://lostcity.rs/c/2004scape/14', 'Forums', 'width=800,height=600');">Forums</a> -
                    <a onclick="window.open('https://lostcity.markets', 'Markets', 'width=800,height=600');">Markets</a>
                </div>

                <div id="notification">
                    <br>
                    <span class="capture-interest">No multilogging!</span><br>
                    <strong>Do not play your alternate accounts at the same time. This is bannable.</strong>

                    <div class="acknowledge" onclick="hideNotification();">[ I Understand ]</div>
                </div>
            </div>

            <iframe id="gameframe" onload="sendSettings()" src='<%= world.address %>/rs2.cgi?plugin=<%= method %>&world=<%= world.id %>&lowmem=<%= detail %>' allowfullscreen></iframe>
        </div>
    </center>

    <script>
        loadSettings();
    </script>
</body>

</html>